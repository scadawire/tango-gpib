ifdef _solaris
CC = CC
#BIN_DIR = solaris9_CC
BIN_DIR=$(shell /csadmin/common/scripts/get_os)_CC
endif

ifdef linux
CC = c++
AR = ar
#BIN_DIR = suse82
#BIN_DIR=$(shell /csadmin/common/scripts/get_os)
BIN_DIR=suse72_gcc32
endif

TANGO_HOME   =  /segfs/tango
INCLUDE_DIRS =  -I$(TANGO_HOME)/include/$(BIN_DIR)	-I.	-I/usr/local/gpib
LIB_DIRS     =  -L$(TANGO_HOME)/lib/$(BIN_DIR) -L. 	-L/usr/lib

ifdef _solaris
CXXFLAGS =  -mt -D_PTHREADS $(INCLUDE_DIRS) -D_solaris
#LFLAGS =  			-Bstatic $(LIB_DIRS)
LFLAGS =  			$(LIB_DIRS)  	\
				-lgpib	\
				-ltango			\
				-lomniORB4 		\
				-lomniDynamic4	\
				-lomnithread	\
				-lCOS4			\
				-lgpib		\
				-Bdynamic	\
				-llog4tango		\
				-lpthread		\
				-lposix4 -lsocket -lnsl
endif

ifdef linux
# -DGPIB_PCI is required when targeting PCI board. Remove it for ENET100 board.
CXXFLAGS =  -g -D_REENTRANT -DGPIB_PCI $(INCLUDE_DIRS) -I/users/goetz/workspace/Gpib/linux/nigpib-linux-0.8.6/
LFLAGS =  -g $(LIB_DIRS)  		\
				-L/users/goetz/workspace/Gpib/linux/nigpib-linux-0.8.6/ \
				-ltango			\
				-llog4tango		\
				-lomniORB4 		\
				-lomniDynamic4	\
				-lomnithread	\
				-lCOS4			\
				-ldl -lpthread \
				-lgpib
# To Link with Enet100 library.
#				-lgpibenet

endif




CLASS =	GpibDeviceServer

SVC_OBJS = 	main.o	\
		ClassFactory.o	\
		$(CLASS)Class.o	\
		$(CLASS).o \
		gpibDevice.o \
		gpibDeviceException.o

SVC_INC = 	$(CLASS)Class.h \
			$(CLASS).h


%.o: %.cpp $(SVC_INC)
	$(CC) $(CXXFLAGS) -c $<
			
all: $(CLASS)

$(CLASS):	$(SVC_OBJS)
	$(CC) $(SVC_OBJS) -o $(CLASS) $(LFLAGS)

clean:
	rm -f *.o $(CLASS) core
	
install:
	cp $(CLASS) $(TANGO_HOME)/bin/$(BIN_DIR)
